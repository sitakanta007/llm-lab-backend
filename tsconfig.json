{
  "compilerOptions": {
    /* Output */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",

    /* Path alias */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Interop & JSON support */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Misc */
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
